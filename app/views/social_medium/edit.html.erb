<%= @user.name %>, <%= @user.email %>

<%= form_for(@social) do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.text_field :id, id: "social-radio", value: "My Precious" %>
  <%= f.submit "Save", class: "btn btn-primary" %>
  <br />
  <%= f.label :twitter, onClick: "socialfn(\"twitter\",\"#{@social.twitter}\");"%>
  <br />
  <%= f.label :github, onClick: "socialfn(\"github\",\"#{@social.github}\");"%>
  <br />
  <%= f.label :instagram, onClick: "socialfn(\"instagram\",\"#{@social.instagram}\");"%>
  <br />
  <%= f.label :youtube, onClick: "socialfn(\"youtube\",\"#{@social.youtube}\");"%>
  <br />
  <%= f.label :facebook, onClick: "socialfn(\"facebook\",\"#{@social.facebook}\");"%>
  <br />
  <%# f.label :youtube, raw("#{check_box_tag('youtube')} Youtube"), onClick: "socialfn(\"youtube\",\"#{@social.youtube}\");"%>

  <%= link_to "Back", "/#{current_user.name}" %>
<% end %>
