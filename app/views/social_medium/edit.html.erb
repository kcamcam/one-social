
<div class="row-fluid">
	<div class="col text-center">
  		<h3><%= @user.name %></h3>
	</div>
</div>	
<%= render 'shared/error_messages' %>

<%= form_for(@social) do |f| %>
	<div class="form-row">
		<div class="col-12 col-sm-6 offset-sm-2">
			<div class="input-group mb-2">
				<div class="input-group-prepend">
				  <div class="input-group-text">@</div>
				</div>
			  	<%= f.text_field 	:id, id: "social-radio", 
			  						value: "",
			  						style: "width: 85%;",
			  						placeholder: "#{@user.name}" %>
			</div>
	  	</div>
		<div class="col-6 offset-3 col-sm-4 offset-sm-0 p-0">
			<%= f.submit "Save", class: "btn btn-primary" %>
			<%= link_to "Back", "/#{@user.name}", class: "btn btn-success" %>
		</div>	
  	</div>
<% end %>
