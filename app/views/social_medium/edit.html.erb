
<div class="row-fluid">
	<div class="col text-center">
  		<h3>@<%= @user.name %></h3>
	</div>
</div>
<%= render 'shared/error_messages' %>

<!-- The input field and submit/back buttons -->
<div class="row-fluid p-2">
	<%= form_for(@social) do |f| %>
		<div class="input-group mb-2" style="width:100%;">
			<div class="input-group-prepend">
			  <div class="input-group-text">@</div>
			</div>
	  	<%= f.text_field 	:id, id: "social-radio",
		  						value: "",
									class: "form-control",
		  						placeholder: "select a social media platform below to update or modify it"
			%>
			<div class="input-group-append">
				<%# link_to "Back", "/#{current_user.name}", class: "btn btn-sm btn-success" %>
				<%= f.submit "Save", class: "btn btn-sm btn-primary" %>
		  </div>
		</div>
	<% end %>
</div>
<!-- ./The input field and submit/back buttons -->

<!-- The cards -->
<div class="row p-3">
	<% @socialarray.each do |sa| %>
		<div class="col-3 col-sm-2 p-2">
			<%= content_tag( :div,"",
								class: "card addsocial" )%>
				<%= image_tag("#{sa}.png",
									alt: "#{sa.capitalize}",
									class: "card-img",
								onClick: "socialfn(\"#{sa}\",\"#{@social[sa]}\");" )%>
		</div>
	<% end %>
</div>
<!-- ./The cards -->
