<%= @user.name %>, <%= @user.email %>

<%= form_for(@social) do |f| %>
  <%= render 'shared/error_messages' %>
  <% if !@social.github? %>
    <%= f.label :github  %>
    <%= f.text_field :github, class: 'form-control' %>
    <br />
  <% end %>

  <% if !@social.twitter? %>
    <%= f.label :twitter  %>
    <%= f.text_field :twitter, class: 'form-control' %>
    <br />
  <% end %>

  <% if !@social.instagram? %>
    <%= f.label :instagram  %>
    <%= f.text_field :instagram, class: 'form-control' %>
    <br />
  <% end %>

  <% if !@social.youtube? %>
    <%= f.label :youtube  %>
    <%= f.text_field :youtube, class: 'form-control' %>
    <br />
  <% end %>
  <% if !@social.facebook? %>
    <%= f.label :facebook  %>
    <%= f.text_field :facebook, class: 'form-control' %>
    <br />
  <% end %>

  <%= f.submit "Save", class: "btn btn-primary" %>
  <%= link_to "Back", "/#{current_user.name}" %>
<% end %>
