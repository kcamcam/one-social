<% provide(:title, "@#{@user.name}") %>
<div class="row">
	<div class="col-12 text-center pt-3 p-2">
    <h2 class="text-dark d-none d-sm-block">Add | Edit Your Links</h2>
	<h3 class="text-dark d-block d-sm-none">Add | Edit Your Links</h3>
  </div>
  <%= render 'shared/error_messages' %>
</div>

<!-- The input field and submit/back buttons -->
<div class="row pb-2">
		<div class="col-10 offset-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
		<div class="row">
			<div class="col-12 p-1">	
			<%= form_for(@social) do |f| %>
				<div class="input-group mb-2" style="width:100%;">
					<div class="input-group-prepend">
					<div class="input-group-text">@</div>
					</div>
					<%= f.text_field 	:id, id: "social-radio",
										value: "",
										class: "form-control",
										placeholder: "select a social media platform below"
					%>
					<div class="input-group-append">
						<%# link_to "Back", "/#{current_user.name}", class: "btn btn-sm btn-success" %>
						<%= f.submit "Save", class: "btn btn-sm btn-primary" %>
					</div>
				</div>
			<% end %>
			</div>
		</div>
	</div>
</div>
<!-- ./The input field and submit/back buttons -->

<!-- The cards -->
<div class="row pb-3">
	<div class="col-10 offset-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
		<div class="row">	
			<% @socialarray.each do |sa| %>
				<div class="col-2 col-md-1 p-1">
					<%= content_tag( :div,"",
										class: "card addsocial" )%>
						<%= image_tag("#{sa}.png",
											alt: "#{sa.capitalize}",
											class: "card-img edit-card-img",
											onClick: "socialfn(\"#{sa}\",\"#{@social[sa]}\");" )%>
				</div>
			<% end %>
		</div>				
	</div>
</div>
<!-- ./The cards -->

<div class="row pb-3 text-right">
	<div class="col-10 offset-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
		<div class="row">	
			<div class="col-12 p-1">
				<div>
					<small>*click the help button if you're having trouble finding your username</small>
				</div>
				<%= link_to "Help", help_path,class: "btn btn-light text-right" %>
				<%= link_to "Back", "/#{current_user.name}", class: "btn btn-light text-right" %>
			</div>
		</div>		
	</div>							
</div>


<script>
	//add opacity to images
	$(function(){
		$(".edit-card-img").click(function(){
			$(".edit-card-img").removeClass("full-opacity");
			$(this).addClass("full-opacity");
		});
	});
</script>
