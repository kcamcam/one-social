<% provide(:title, "Log in") %>
<div class="row-fluid">
	<div class="col-12 text-center pt-3 px-2">
		<h1 class="text-dark d-none d-sm-block">Welcome Back!</h1>
		<h2 class="text-dark d-block d-sm-none">Welcome Back!</h2>
  </div>
</div>
<div class="row-fluid">
	<div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 pt-3 px-2 pb-5">
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="input-group mb-3" style="width:100%;">
        <div class="input-group-prepend">
          <div class="input-group-text">E-mail</div>
        </div>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="input-group mb-3" style="width:100%;">
        <div class="input-group-prepend">
          <div class="input-group-text">Password</div>
        </div>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary form-control mb-2" %>

      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me%>
        <lbael class="text-muted">&nbsp;Remember me on this computer</lbael>
      <% end %>

    <% end %>

    <%= link_to "New user? Sign up here", new_user_path, class: "btn btn-success mt-2"%>
  </div>
</div>
