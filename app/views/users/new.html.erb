<% provide(:title, '📝 Sign up') %>
<div class="row-fluid">
	<div class="col-12 text-center pt-3 px-2">
    <h1 class="text-dark d-none d-sm-block">Sign Up</h1>
		<h2 class="text-dark d-block d-sm-none">Sign Up</h2>
  </div>
  <%= render 'shared/error_messages' %>
</div>

<div class="row-fluid">
	<div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 pt-3 px-2 pb-5">
    <%= form_for(@user) do |f| %>
      <div class="input-group mb0" style="width:100%;">
        <div class="input-group-prepend">
          <div class="input-group-text">1social.me/</div>
        </div>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
			<div class="mb-3">
				<small class="text-muted">This is the username we will use to create your personal link.</small>
			</div>

      <div class="input-group mb-3" style="width:100%;">
        <div class="input-group-prepend">
          <div class="input-group-text">E-mail</div>
        </div>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="input-group mb-3" style="width:100%;">
        <div class="input-group-prepend">
          <div class="input-group-text">Password</div>
        </div>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="input-group mb-3" style="width:100%;">
        <div class="input-group-prepend">
          <div class="input-group-text">Confirm Password</div>
        </div>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit "Sign Up", class: "btn btn-success form-control my-2" %>
			<small>By clicking Sign Up, you agree to our <%= link_to "Terms & Condition's",terms_path %> and <%= link_to "Privacy Policy", privacy_path %>.</small>
    <% end %>
		<%= link_to "Already have an account? Log in here", login_path, class: "btn btn-dark mt-2"%>
  </div>
</div>
