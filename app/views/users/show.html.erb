<!-- Twtitter -->
<% if @user.social_medium.twitter != "" %>
  <%= form_for(@social) do |f| %>
    <%= f.submit "X",
      data: { confirm: 'Are you sure you want to delete',
              'confirm-button-text': 'Im ready',
              'cancel-button-text': 'No way',
              'confirm-button-color': '#a5d6a7',
              'cancel-button-color': '#e57373',
              'sweet-alert-type': 'error',
              text: "@#{@user.social_medium.twitter}"}
    %>
    <%= f.label "#{:twitter} @#{@user.social_medium.twitter}" %>
    <%= f.text_field :twitter, style: 'display: none;', value: '' %>
  <% end %>
<% end %>

