<% provide(:title, "✏️Edit Profile") %>
<div class="row-fluid">
	<div class="col-12 text-center pt-3 px-2">
    <h1>Update your profile</h1>
  </div>
  <%= render 'shared/error_messages' %>
</div>
<div class="row-fluid">
	<div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 pt-3 px-2">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <div class="input-group mb-3" style="width:100%;">
        <div class="input-group-prepend">
          <div class="input-group-text">1social.me/</div>
        </div>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="input-group mb-3" style="width:100%;">
        <div class="input-group-prepend">
          <div class="input-group-text">E-mail</div>
        </div>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="input-group mb-3" style="width:100%;">
        <div class="input-group-prepend">
          <div class="input-group-text">New Password</div>
        </div>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="input-group mb-3" style="width:100%;">
        <div class="input-group-prepend">
          <div class="input-group-text">Confirm Password</div>
        </div>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="row">
      <div class="col-12 col-sm-6">
        <%= f.submit "Update My Account", class: "btn btn-primary form-control mb-2" %>
      </div>
      <div class="col-12 col-sm-6">
        <%= link_to "Cancel", "/#{current_user.name}", class: "btn btn-danger form-control" %>
      </div>
      </div>
    <% end %>
  </div>
</div>
