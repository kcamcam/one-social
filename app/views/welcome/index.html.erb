<div class="row-fluid px-1 px-sm-4 pt-3 text-dark">
  <h2 class="d-none d-sm-block"><span class="typed"></span></h2>
  <h4 class="d-block d-sm-none"><span class="typed-xs"></span></h4>
  <script type="text/javascript">
  // Typed.js from https://mattboldt.com/demos/typed-js/
    var options = {strings: [
                    "Follow me on: Instagram @user_name",
                    "Follow me on: Youtube /user_name",
                    "Follow me on: Facebook @user_name",
                    "Follow me on: <span class=\"text-primary\">Everywhere</span> <strong><a href=\"http\://1social.me/kcamel\" class=\"text-dark\">1social.me/user_name</strong></a>"
                  ],
                  smartBackspace: true,
                  typeSpeed: 40,
                  onComplete: function(){
  	                 $(".card-img-welcome").css('filter','grayscale(0)');
                     $(".card-img-welcome").css('opacity','0.8');
                  }
                };
    var typed = new Typed('.typed', options );
    var typed = new Typed('.typed-xs', options);
  </script>
  <p class="h6 d-block d-sm-none">The missing social media link</p>
  <p class="h3 d-none d-sm-block">The missing social media link</p>
  <p class="h6 d-block d-sm-none">All of your social media in one place</p>
  <p class="h3 d-none d-sm-block">All of your social media in one place</p>
</div>

<div class="row px-1 pl-sm-4 pr-sm-5 mx-0 ml-sm-2 mr-sm-5 pt-2">
	<% @socialarray.each do |sa| %>
		<div class="col-3 col-sm-2 col-md-1 p-1">
			<%= content_tag( :div,"",
								class: "card addsocial" )%>
				<%= image_tag("#{sa}.png",
									alt: "#{sa.capitalize}",
									class: "card-img card-img-welcome",
                  style: "-webkit-filter: grayscale(1);filter: grayscale(1); opacity: 0.4;transition-duration: 1300ms;")%>
		</div>
	<% end %>
</div>

<div class="row-fluid px-1 px-sm-4 py-4 pb-5">
  <%= link_to "Sign up", new_user_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "Search Users", users_path, class: "btn btn-lg btn-success" %>
</div>
