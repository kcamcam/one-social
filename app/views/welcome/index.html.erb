<div class="row-fluid" align="justify">
  <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
    <div class="row">
    	<% @socialarray.each do |sa| %>
    		<div class="col-3 col-sm-2 col-md-2 p-1">
    			<%= content_tag( :div,"",
    								class: "card addsocial" )%>
    				<%= image_tag("#{sa}.png",
    									alt: "#{sa.capitalize}",
    									class: "card-img card-img-welcome",
                      style: "-webkit-filter: grayscale(1);filter: grayscale(1); opacity: 0.4;")%>
    		</div>
    	<% end %>
    </div>
  </div>
</div>

<div class="row-fluid pb-5">
  <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
    <div class="row" align="justify">
      <div class="col-12 p-1">
        <p class="h6 d-block d-sm-none">The missing social media link. All of your social media, now in one place.</p>
        <p class="h4 d-none d-sm-block">The missing social media link. All of your social media, now in one place.</p>
      </div>
      <div class="col-sm-3 pl-1 pr-1 py-0">
        <%= link_to "Users", users_path, class: "btn btn-md btn-dark btn-block mt-2" %>
      </div>
      <% if !logged_in? %>
        <div class="col-sm-3 p-0 pl-1 pr-1">
      	   <%= link_to "Sign up", new_user_path, class: "btn btn-md btn-success btn-block mt-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
