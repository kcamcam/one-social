<div class="row-fluid px-1 px-sm-4 pt-3 text-dark">
  <h2 class="d-none d-sm-block"><span class="typed"></span></h2>
  <h3 class="d-block d-sm-none"><span class="typed-xs"></span></h3>
  <script type="text/javascript">
  // Typed.js from https://mattboldt.com/demos/typed-js/
  var typed = new Typed('.typed', {
    strings: ["Follow me on instagram @user_name",
              "Follow me on youtube /user_name",
              "Follow me on facebook @user_name",
              "Follow me on <span class=\"text-primary\">everywhere<strong><a href=\"http://kcamel.com\" class=\"text-dark\">1social.me/user_name</strong></a>"],
    smartBackspace: true,
    typeSpeed: 40
  });
  var typed = new Typed('.typed-xs', {
    strings: ["Follow me on <br />instagram @user_name",
              "Follow me on <br />youtube /user_name",
              "Follow me on <br />facebook @user_name",
              "Follow me on <span class=\"text-primary\">everywhere</span><br /><a href=\"http://1social.me/kcamel\" class=\"text-dark\">1social.me/user_name</a>"],
    smartBackspace: true,
    typeSpeed: 40
  });
  </script>
  <p class="h5 d-block d-sm-none">The missing social media link</p>
  <p class="h3 d-none d-sm-block">The missing social media link</p>
  <p class="h5 d-block d-sm-none">All of your social media in one place</p>
  <p class="h3 d-none d-sm-block">All of your social media in one place</p>
</div>

<div class="row px-1 px-sm-4 mx-0 mx-sm-2 pt-4">
	<% @socialarray.each do |sa| %>
		<div class="col-3 col-sm-2 col-md-1 p-1">
			<%= content_tag( :div,"",
								class: "card addsocial" )%>
				<%= image_tag("#{sa}.png",
									alt: "#{sa.capitalize}",
									class: "card-img card-img-welcome",
                  style: "  -webkit-filter: grayscale(1);filter: grayscale(1); opacity: 0.4;")%>
		</div>
	<% end %>
</div>

<div class="row-fluid px-1 px-sm-4 py-4">
  <%= link_to "Sign up", new_user_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "Search Users", users_path, class: "btn btn-lg btn-success" %>
</div>
