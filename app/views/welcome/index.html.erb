<div class="row-fluid px-5">
  <h2><span class="typed"></span></h2>
  <script type="text/javascript">
  // Typed.js from https://mattboldt.com/demos/typed-js/
  var typed = new Typed('.typed', {
    strings: ["Follow me on instagram @user_name",
              "Follow me on twitter @user_name",
              "Follow me on facebook @user_name",
              "Follow me on everywhere <br/><strong><a href=\"http://kcamel.com\">1social.me/user_name</strong></a>"],
    smartBackspace: true,
    typeSpeed: 40
  });
  </script>
  <h4>The missing social media link</h4>
  <h4>All of your social media in one place</h4>
  <h4>One link to rule them all: </h4>
  <h5>bloggers, vloggers, grammers, tweeters, gollums, make yourself visible to followers and subscribers.</h5>

</div>

<div class="row px-5 mx-2">
	<% @socialarray.each do |sa| %>
		<div class="col-3 col-sm-2 col-md-1 p-1">
			<%= content_tag( :div,"",
								class: "card addsocial" )%>
				<%= image_tag("#{sa}.png",
									alt: "#{sa.capitalize}",
									class: "card-img card-img-welcome",
                  style: "  -webkit-filter: grayscale(1);filter: grayscale(1); opacity: 0.4;")%>
		</div>
	<% end %>
</div>

<div class="row-fluid px-5 pt-3">
  <%= link_to "Sign up", new_user_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "Search Users", users_path, class: "btn btn-lg btn-success" %>
</div>
